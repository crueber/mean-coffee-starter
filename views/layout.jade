doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    title #{title}
    script(type='text/javascript', src='/libraries/jquery/dist/jquery.min.js')
    script(type='text/javascript', src='/libraries/lodash/dist/lodash.min.js')
    script(type='text/javascript', src='/libraries/angular/angular.min.js')
    script(type='text/javascript', src='/libraries/angular-sanitize/angular-sanitize.min.js')
    script(type='text/javascript', src='/libraries/angular-route/angular-route.min.js')
    script(type='text/javascript', src='/libraries/angular-animate/angular-animate.min.js')
    script(type='text/javascript', src='/libraries/restangular/dist/restangular.min.js')
    script(type='text/javascript', src='/libraries/ui-bootstrap/src/dropdownToggle/dropdownToggle.js')
    != css('styles')
    != js('application')
  body(ng-app='mean', ng-cloak)
    #wrap
      include partials/navigation
      .container-fluid
        include partials/flash
        block content
    include partials/footer
    script.
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-XXXXX-X']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
